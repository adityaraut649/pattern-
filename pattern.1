import java.util.Scanner;


public class Demo {
    public static void main(String[] args) {
        Scanner Scan = new Scanner(System.in);
        // take an input n
        int n = Scan.nextInt();
        
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n - i  ; j++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println(" ");
        }

    }
}
